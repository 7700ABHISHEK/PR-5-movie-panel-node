<%- include('partials/start.ejs') %>

    <div class="container my-5">

        <% if (!movie) { %>

            <div class="d-flex justify-content-center">
                <div class="card shadow-sm text-center p-4" style="max-width: 420px;">
                    <h4 class="text-muted mb-3">Movie not found</h4>
                    <a href="/admin/viewMovie" class="btn btn-secondary">
                        Back to Movie List
                    </a>
                </div>
            </div>

            <% } else { %>

                <div class="row justify-content-center">
                    <div class="col-lg-8">

                        <div class="card shadow-lg border-0">

                            <!-- Poster -->
                            <div class="text-center bg-dark rounded-top p-4">
                                <img src="/<%= movie.photo %>" alt="<%= movie.name %>" class="img-fluid rounded shadow"
                                    style="max-height: 350px;">
                            </div>

                            <!-- Content -->
                            <div class="card-body p-4">

                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <h3 class="mb-0">
                                        <%= movie.name %>
                                    </h3>
                                    <span class="badge bg-primary fs-6">
                                        ⭐ <%= movie.rating %>/5
                                    </span>
                                </div>

                                <div class="row text-muted mb-3">
                                    <div class="col-md-6">
                                        <strong>Genre:</strong>
                                        <%= movie.genre %>
                                    </div>
                                    <div class="col-md-6 text-md-end">
                                        <strong>Release Date:</strong>
                                        <%= movie.date %>
                                    </div>
                                </div>

                                <hr>

                                <h5 class="mb-2">Description</h5>
                                <p class="text-secondary" style="line-height: 1.7;">
                                    <%= movie.description %>
                                </p>

                                <div class="d-flex justify-content-between mt-4">
                                    <a href="/admin/viewMovie" class="btn btn-outline-secondary">
                                        ← Back to list
                                    </a>

                                    <a href="/admin/updateMovie/<%= movie.id %>" class="btn btn-primary">
                                        Edit Movie
                                    </a>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>

                <% } %>

    </div>

    <%- include('partials/end.ejs') %>